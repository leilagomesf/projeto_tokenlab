<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MovieActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:fillViewport="false">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/pgBar" android:visibility="visible"/>

        <!--Titulo da tela-->
        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title"
                android:layout_marginTop="10dp"
                android:text="@string/movie_activity_title"
                android:textColor="@color/textColor" android:layout_centerInParent="false"
                android:layout_centerHorizontal="false" android:fontFamily="@font/open_sans_semibold"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
        <!--Poster do filme-->
        <ImageView
                android:layout_width="200dp"
                android:layout_height="290dp"
                android:id="@+id/imgPoster" android:layout_centerHorizontal="true" android:layout_marginTop="20dp"
                android:layout_below="@id/title"/>
        <!--Generos-->
        <TextView
                android:text="@string/test_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtGenres"
                android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:textColor="@color/textColor"
                android:layout_below="@id/txtTitle" android:textSize="@dimen/movie_details"/>
        <!--Sinopse-->
        <TextView
                android:text="@string/test_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtOverview"
                android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:textColor="@color/textColor"
                android:layout_below="@id/txtGenres" android:textSize="@dimen/movie_details"
                android:justificationMode="inter_word"
                android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>
        <!--Data de estreia-->
        <TextView
                android:text="@string/test_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtReleaseDate"
                android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:textColor="@color/textColor"
                android:layout_below="@id/txtOverview" android:textSize="@dimen/movie_details"/>
        <!--Linguagem original-->
        <TextView
                android:text="@string/test_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtOriginalLanguage"
                android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:textColor="@color/textColor"
                android:layout_below="@id/txtReleaseDate" android:textSize="@dimen/movie_details"/>
        <!--Popularidade-->
        <TextView
                android:text="@string/test_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtPopularity"
                android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:textColor="@color/textColor"
                android:layout_below="@id/txtOriginalLanguage" android:textSize="@dimen/movie_details"/>
        <!--Media de votos-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtVoteAverage"
                android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:text="@string/test_string"
                android:textColor="@color/textColor" android:layout_below="@id/txtPopularity"
                android:textSize="@dimen/movie_details"/>
        <!--Slogan-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtTagline"
                android:layout_below="@id/imgPoster"
                android:fontFamily="@font/open_sans_semibold_italic" android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true" android:text="@string/test_string"
                android:textColor="@color/textColor" android:textSize="@dimen/movie_details"/>
        <!--TÃ­tulo-->
        <TextView
                android:text="@string/test_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtTitle"
                android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                android:fontFamily="@font/open_sans_semibold" android:textColor="@color/textColor"
                android:layout_below="@id/txtTagline" android:textSize="@dimen/movie_details" android:layout_marginEnd="20dp"/>
    </RelativeLayout>
</ScrollView>
